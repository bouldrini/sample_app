<div class="user_info">
<a href="<%= user_path(current_user) %>">
<%= gravatar_for current_user, :size => 30 %> <span class="user_name">
<%= current_user.name %> </span>
<span class="microposts">
<%= pluralize(current_user.microposts.count, "micropost") %>
</span> </a>

<% current_user.followers.map{|f| f.microposts.limit(3)}.compact.flatten.each do |mp| %>
  <%#= mp.try(:content) %><br />
<% end %>

<% current_user.feed.each do |mp| %>
  <%= mp.try(:content) %><br />
<% end %>

</div>
