<h1> Users: </h1> <br>

<%= will_paginate %>

<%  @user.each do |user| %>
<div id="gravatar">
<%= gravatar_for user,100 %>
<%=link_to user.name,  user_path(user) %> <br />
</div> 
<% end %>

<%= will_paginate %>

<script type="text/javascript">
jQuery(function($){
  var size = 0;
  $("#gravatar img").click(function(){
    if ($(this).css('width') == '250px') {
      size = '100px';
    } else {
      size = '250px'; 
    }
    $(this).animate({
    width: size,
    height: size  
  }, 500, function() {
  })});
});
</script>
