
<div id="gravatar">
  <%= gravatar_for user, 100 %> 
  <%= link_to user.name, user %> 

  <% if current_user.admin? %> 
    <% unless user.admin? %>
      <div class="admin">
        || <%= link_to "kill user", user_path(user), :method => :delete, :confirm => 'Really?' %>
      </div>
    <% end %>
  <% end %>
</div>
