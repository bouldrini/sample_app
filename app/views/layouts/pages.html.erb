<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>

      <%= csrf_meta_tag %>
      <%= render 'layouts/stylesheets' %>
      
  </head>
  <body>

    <header>
      <%= link_to image_tag("logo.png", :alt => "Tent"), root_path %>
    </header> 

      <%= render 'layouts/nav' %>

    <div class="container">
      <section class="round">

<% flash.each do |key, value| %>
<%= content_tag(:div, value, :class => "flash #{key} round") %>
<% end %>

        <%= yield %> 
      </section>

        

    </div>

    <div class="debug">
      <center>
        <%= render 'layouts/footer' %>
     <%= debug(params) if Rails.env.development? %>
   </center>
   </div>
  </body>
</html>
